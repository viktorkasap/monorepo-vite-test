root = true

[*]
charset = utf-8
indent_size = 2
end_of_line = lf
indent_style = space
max_line_length = 140
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md, txt}]
# indent_size = 4
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
