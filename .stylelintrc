{
  "extends": ["stylelint-config-standard", "stylelint-config-css-modules"],
  "plugins": ["stylelint-order"],
  "rules": {
    "rule-empty-line-before": [
      "always",
      {
        "except": ["first-nested", "after-rule"],
        "ignore": ["after-comment"]
      }
    ],
    "order/order": ["custom-properties", "declarations"],
    "order/properties-order": [
      [
        "display",
        "width",
        "max-width",
        "min-width",
        "height",
        "max-height",
        "min-height",
        "margin",
        "margin-top",
        "margin-right",
        "margin-bottom",
        "margin-left",
        "padding",
        "padding-top",
        "padding-right",
        "padding-bottom",
        "padding-left",
        "position",
        "top",
        "left",
        "bottom",
        "right",
        "font-size",
        "font-weight",
        "color",
        "background",
        "background-color",
        "background-size",
        "background-position",
        "transition",
        "filter"
      ],
      {
        "unspecified": "bottomAlphabetical"
      }
    ]
  }
}
